{
  "compilerOptions": {
    /* ===== Ambiente ===== */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "types": ["node"],

    /* ===== Sa√≠da ===== */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,

    /* ===== Compatibilidade ===== */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ===== Regras de tipo ===== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
